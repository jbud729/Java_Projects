import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
			
		startGame();
	}
	

	public static void startGame() {
		boolean endGame = false;
		while(endGame == false) {
			String response = null;
			Scanner scanner = new Scanner(System.in);
			String reversedWord = "";
			System.out.println("Enter you word:");
			response = scanner.nextLine();
			for(int i = (response.length() - 1); i>=0; i--) {
				reversedWord +=response.charAt(i);
			}
			
			System.out.println("You're reversed word is: "+reversedWord);
			quitRestartGame(scanner, endGame);
			
				
		}
	}
	
	
	public static void quitRestartGame(Scanner s, boolean e) {
		System.out.println("Do you want to enter another word?:");
	}
	
	

}
